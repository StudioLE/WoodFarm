  "version": "2.0.0",
  "tasks": [
    {
      "label": "Hugo server [development]",
      "type": "shell",
      "command": "hugo",
      "args": ["server"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Hugo server [production]",
      "type": "shell",
      "command": "hugo",
      "args": ["server", "--environment", "production", "--minify"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Hugo build [development]",
      "type": "shell",
      "command": "hugo",
      "args": ["--environment", "development"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Hugo build [production]",
      "type": "shell",
      "command": "hugo",
      "args": ["--environment", "production", "--minify"],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
